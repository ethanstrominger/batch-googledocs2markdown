{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "./src", 
  ],
  "exclude": [
    "./test",
    "./src/client",
  ],
}